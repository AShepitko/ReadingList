# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do

  desc "Run tests"
  lane :test do
    cocoapods
    scan
  end

  desc "Push a new beta build to TestFlight"
  lane :beta do
    #scan
    build_number = get_build_number # store this for later
    increment_build_number({
      build_number: latest_testflight_build_number + 1
    })
    build_app(workspace: "ReadingList.xcworkspace", scheme: "ReadingList")
    upload_to_testflight
    increment_build_number(
      build_number: build_number # revert the build number
    )
  end

  desc "Download DSYMs from iTunes and upload them to Crashlytics"
  lane :dsyms do
    download_dsyms
    upload_symbols_to_crashlytics
    clean_build_artifacts
  end
end
